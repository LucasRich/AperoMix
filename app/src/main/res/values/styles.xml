<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">#000</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up_button</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- TOOLBAR LOGIN THEME -->
    <style name="ToolbarLoginTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">#000</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up_button</item>
    </style>

</resources>
